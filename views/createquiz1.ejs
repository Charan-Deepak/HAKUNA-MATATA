    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            The best platform <br />
            <span class="text-primary">for making quizzes</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            
          </p>
        </div>

        <div class="col-lg-5 mb-5 mb-lg-0">
          <div class="card" >
            <div class="card-body py-5 px-md-5">
              <form action="/create-quiz" method="POST">
                
                <div id="quiz_name" class="form-outline mb-4">
                  <input type="text" id="form3Example3" class="form-control" name="quizName"/>
                  <label class="form-label" for="form3Example3">Name of quiz</label>
                </div>
              
                
            
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4" style="opacity: 100%;">
                  Create quiz
                </button>

              
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
            // Create a div element
        const username = document.createElement("input");
        username.type="hidden";
        // Set attributes using setAttribute method
        username.name="user_name";
        username.value = '<%=user_name%>'; // Set text content, not value

        // Find the element with id "quiz_name"
        const quiz_name = document.getElementById("quiz_name");

        // Append the username div as a child of the quiz_name element
        quiz_name.appendChild(username); // adding the username div inside of the quiz_name block

        document.getElementById('admin_dashboard').addEventListener('click', function(event) {
          event.preventDefault(); // Prevent the default anchor click behavior
      
          // Create a form element
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = 'admin';
      
          // Create the hidden input element for username
          const user_name = document.createElement('input');
          user_name.type = 'hidden';
          user_name.name = 'user_name';
          user_name.value = '<%= user_name %>'; // Assuming this is a server-side templating variable
          
          // Append the form to the body (required to submit it)
          document.body.appendChild(form);
          form.appendChild(user_name);
  
          // Submit the form
          form.submit();
      });
        
  </script>
